@model TicketCore.ViewModels.Business.BusinessHoursDisplayViewModel
@{
    ViewBag.PageName = "Business Hours";
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Business Hours Configuration Details</h3>
        </div>
        <div class="card-body register-card-body">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Name :</label>
                    @Model.BusinessHours.Name

                </div>
                <div class="form-group col-md-4">
                    <label>Description :</label>
                    @Model.BusinessHours.Description

                </div>
                <div class="form-check">
                    <label>Status :</label>
                    @if (Model.BusinessHours.Status)
                    {
                        <label class="form-check-label" asp-for="@Model.BusinessHours.Status">Active</label>
                    }
                    else
                    {
                        <label class="form-check-label" asp-for="@Model.BusinessHours.Status">InActive</label>
                    }
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    @if (Model != null)
                    {
                        if (Model.ListofBusinessHoursDetails.Count > 0)
                        {
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Day</th>
                                        <th>Morning Time</th>
                                        <th>Evening Time</th>
                                        <th>CreateOn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ListofBusinessHoursDetails)
                                    {
                                        <tr>
                                            <td>@item.Day</td>
                                            <td>@item.MorningTime</td>
                                            <td>@item.EveningTime</td>
                                            <td>@item.CreatedOn</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        }
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <strong>Message!</strong> No Data Found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>