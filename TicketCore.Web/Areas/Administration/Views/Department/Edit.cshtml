@model TicketCore.Models.Department.Departments
@{
    ViewBag.PageName = "Phòng ban ";
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chỉnh sửa</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Department" asp-antiforgery="true" asp-action="Edit" method="post">
            @Html.HiddenFor(model => model.DepartmentId)
            <div class="card-body register-card-body">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label class="mandatory"  asp-for="DepartmentName"></label>
                        <input asp-for="DepartmentName" placeholder="Nhập tên phòng ban" class="form-control" />
                        <span class="text-danger" asp-validation-for="DepartmentName"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="mandatory"  asp-for="Code"></label>
                        <input asp-for="Code" placeholder="Nhập mã phòng ban" class="form-control" />
                        <span class="text-danger" asp-validation-for="Code"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label  class="mandatory" asp-for="DepartmentDescription"></label>
                        <input asp-for="DepartmentDescription" placeholder="Nhập mô tả" class="form-control" />
                        <span class="text-danger" asp-validation-for="DepartmentDescription"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-check">
                        <input type="checkbox" asp-for="Status" class="form-check-input" />
                        <label class="form-check-label" asp-for="Status">Hoạt động</label>
                        <span class="text-danger" asp-validation-for="Status"></span>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-success">Lưu</button>
                <a asp-area="Administration" class="btn btn-danger" asp-controller="Department" asp-action="Create">Hủy</a>
                <a asp-area="Administration" class="btn btn-primary" asp-controller="Department" asp-action="Index">Danh sách</a>

            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/scripts/custom/category.validate.js"></script>
}
